<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent"
              android:orientation = "vertical" >
	<!--title-->
	<RelativeLayout
		android:layout_width = "match_parent"
		android:layout_height = "48dp"
		android:background = "@color/baseHeaderColor"
		android:orientation = "horizontal"
	>

		<ImageView android:id = "@+id/id_youku_home_back"
		           android:layout_width = "60dp"
		           android:layout_height = "40dp"
		           android:layout_centerVertical = "true"
		           android:layout_gravity = "center_vertical"
		           android:paddingBottom = "10dp"
		           android:paddingLeft = "14dp"
		           android:paddingRight = "24dp"
		           android:paddingTop = "10dp"
		           android:src = "@mipmap/defaul_image"

		           android:visibility = "gone" />

		<TextView
			android:layout_width = "match_parent"
			android:layout_height = "match_parent"
			android:layout_gravity = "center"
			android:gravity = "center"
			android:text = "them"
			android:textColor = "#fff"
			android:textSize = "16sp" />
	</RelativeLayout >

	<ImageView android:layout_width = "100dp" android:layout_height = "100dp"
	           android:layout_gravity="center_horizontal"
	           android:src = "@drawable/ic_launcher" />
	<TextView android:padding="10dp" android:layout_margin="10dp" android:id="@+id/view1" android:layout_width = "match_parent" android:layout_height = "wrap_content" android:textSize="10sp"/>
	<TextView android:padding="10dp" android:layout_margin="10dp" android:id="@+id/view2" android:layout_width = "match_parent" android:layout_height = "wrap_content" android:textSize="10sp"/>
	<TextView android:padding="10dp" android:layout_margin="10dp" android:id="@+id/view3" android:layout_width = "match_parent" android:layout_height = "wrap_content" android:textSize="10sp"/>
	<TextView android:padding="10dp" android:layout_margin="10dp" android:id="@+id/view4" android:layout_width = "match_parent" android:layout_height = "wrap_content" android:textSize="10sp"/>

	<TextView android:padding="10dp" android:layout_margin="10dp" android:id="@+id/view5" android:layout_width = "match_parent" android:layout_height = "wrap_content" android:textSize="10sp"/>
	<TextView android:padding="10dp" android:layout_margin="10dp" android:id="@+id/view6" android:layout_width = "match_parent" android:layout_height = "wrap_content" android:textSize="10sp"/>

</LinearLayout >