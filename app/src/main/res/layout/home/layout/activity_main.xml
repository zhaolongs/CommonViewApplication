<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.example.androidlongs.popwindowapplication.MainActivity">


    <ScrollView
        android:id="@+id/sv_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">


            <Button
                android:id="@+id/bt_pop_from_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_selector"
                android:text="@string/pop_from_bottom"/>

            <Button
                android:id="@+id/bt_pop_from_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background_selector"
                android:text="@string/pop_from_top"/>

            <Button
                android:id="@+id/bt_pop_from_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background_selector"
                android:text="@string/pop_from_left"/>

            <Button
                android:id="@+id/bt_pop_from_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background_selector"
                android:text="@string/pop_from_right"/>
            <Button
                android:id="@+id/bt_dialog_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background_selector"
                android:text="@string/dia_delete_base"/>
            <Button
                android:id="@+id/bt_path_view_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background_selector"
                android:text="爱心静态"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
