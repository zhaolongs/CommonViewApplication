<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              xmlns:youku = "http://schemas.android.com/apk/res-auto"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent"
              android:background = "@color/baseBackgroundColor"
              android:orientation = "vertical" >
	<!--title-->
	<LinearLayout
		android:layout_width = "match_parent"
		android:layout_height = "48dp"
		android:background = "@color/baseHeaderColor"
		android:orientation = "horizontal"
	>

		<ImageView android:id = "@+id/id_youku_home_back"
		           android:layout_width = "60dp"
		           android:layout_height = "40dp"
		           android:layout_gravity = "center_vertical"
		           android:paddingBottom = "10dp"
		           android:paddingLeft = "14dp"
		           android:paddingRight = "24dp"
		           android:paddingTop = "10dp"
		           android:src = "@mipmap/back" />

		<TextView
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:layout_gravity = "center"
			android:gravity = "center"
			android:text = "youku"
			android:textColor = "#fff"
			android:textSize = "16sp" />
	</LinearLayout >

	<LinearLayout android:layout_width = "wrap_content"
	              android:layout_height = "wrap_content"
	              android:gravity = "center_vertical"
	              android:orientation = "horizontal" >
		<LinearLayout android:layout_width = "wrap_content"
		              android:layout_height = "wrap_content"
		              android:orientation = "vertical" >
			<com.example.androidlongs.popwindowapplication.button.AnimationButton
				android:id = "@+id/youku_stop"
				android:layout_width = "80dp"
				android:layout_height = "30dp"
				android:layout_marginLeft = "12dp"
				android:layout_marginTop = "6dp"
				android:gravity = "center"
				android:padding = "0dp"
				android:text = "stop"
				android:textSize = "8sp"
				youku:backGroundColor = "@color/baseHeaderColor2"
				youku:backGroundDownColor = "@color/baseHeaderColor"
				youku:backGroundRoundColor = "@color/baseHeaderColor2"
				youku:backGroundRoundRx = "4dp"
				youku:backGroundRoundRy = "4dp"
				youku:buttonTextColor = "#fff" />
			<com.example.androidlongs.popwindowapplication.button.AnimationButton
				android:id = "@+id/youku_start"
				android:layout_width = "80dp"
				android:layout_height = "30dp"
				android:layout_marginLeft = "12dp"
				android:layout_marginTop = "6dp"
				android:gravity = "center"
				android:padding = "0dp"
				android:text = "start"
				android:textSize = "8sp"
				youku:backGroundColor = "@color/baseHeaderColor2"
				youku:backGroundDownColor = "@color/baseHeaderColor"
				youku:backGroundRoundColor = "@color/baseHeaderColor2"
				youku:backGroundRoundRx = "8dp"
				youku:backGroundRoundRy = "8dp"
				youku:buttonTextColor = "#fff" />
			<com.example.androidlongs.popwindowapplication.button.AnimationButton
				android:id = "@+id/youku_select_speed"
				android:layout_width = "80dp"
				android:layout_height = "30dp"
				android:layout_marginLeft = "12dp"
				android:layout_marginTop = "6dp"
				android:gravity = "center"
				android:padding = "0dp"
				android:text = "调速"
				android:textSize = "8sp"
				youku:backGroundColor = "@color/baseHeaderColor2"
				youku:backGroundDownColor = "@color/baseHeaderColor"
				youku:backGroundRoundColor = "@color/baseHeaderColor2"
				youku:backGroundRoundRx = "8dp"
				youku:backGroundRoundRy = "8dp"
				youku:buttonTextColor = "#fff" />
		</LinearLayout >
		<com.example.androidlongs.popwindowapplication.sufure.youku.YouKuProgressView

			android:id = "@+id/id_youku_home"
			android:layout_width = "match_parent"
			android:layout_height = "match_parent"
			youku:YouKuViewDuration="3000"
			android:layout_gravity = "center"
			android:layout_margin = "20dp"
			youku:YouKuViewBackgrouncColor = "@color/baseBackgroundColor2"
			youku:YouKuViewRadius = "15dp" />
		<com.example.androidlongs.popwindowapplication.sufure.youku.YouKuProgressView

			android:id = "@+id/id_youku_home1"
			android:layout_width = "match_parent"
			android:layout_height = "match_parent"
			android:layout_gravity = "center"
			android:layout_margin = "20dp"
			youku:YouKuViewBackgrouncColor = "@color/baseBackgroundColor2"
			youku:YouKuViewRadius = "15dp" />
		<com.example.androidlongs.popwindowapplication.sufure.youku.YouKuProgressView

			android:id = "@+id/id_youku_home2"
			android:layout_width = "match_parent"
			android:layout_height = "match_parent"
			android:layout_gravity = "center"
			android:layout_margin = "20dp"
			youku:YouKuViewBackgrouncColor = "@color/baseBackgroundColor2"
			youku:YouKuViewRadius = "15dp" />
	</LinearLayout >


	<com.example.androidlongs.popwindowapplication.button.AnimationButton
		android:id = "@+id/youku_show_1"
		android:layout_width = "80dp"
		android:layout_height = "30dp"
		android:layout_gravity = "left"
		android:layout_marginLeft="12dp"
		android:layout_marginTop = "20dp"
		android:gravity = "center"
		android:padding = "0dp"
		android:text = "示例一"
		android:textSize = "8sp"
		youku:backGroundColor = "@color/baseHeaderColor2"
		youku:backGroundDownColor = "@color/baseHeaderColor"
		youku:backGroundRoundColor = "@color/baseHeaderColor2"
		youku:backGroundRoundRx = "8dp"
		youku:backGroundRoundRy = "8dp"
		youku:buttonTextColor = "#fff" />
	<com.example.androidlongs.popwindowapplication.button.AnimationButton
		android:id = "@+id/youku_show_2"
		android:layout_width = "80dp"
		android:layout_height = "30dp"
		android:layout_gravity = "left"
		android:layout_marginLeft="12dp"
		android:layout_marginTop = "20dp"
		android:gravity = "center"
		android:padding = "0dp"
		android:text = "示例二"
		android:textSize = "8sp"
		youku:backGroundColor = "@color/baseHeaderColor2"
		youku:backGroundDownColor = "@color/baseHeaderColor"
		youku:backGroundRoundColor = "@color/baseHeaderColor2"
		youku:backGroundRoundRx = "8dp"
		youku:backGroundRoundRy = "8dp"
		youku:buttonTextColor = "#fff" />
	<com.example.androidlongs.popwindowapplication.button.AnimationButton
		android:id = "@+id/youku_show_3"
		android:layout_width = "80dp"
		android:layout_height = "30dp"
		android:layout_gravity = "left"
		android:layout_marginLeft="12dp"
		android:layout_marginTop = "20dp"
		android:gravity = "center"
		android:padding = "0dp"
		android:text = "示例三"
		android:textSize = "8sp"
		youku:backGroundColor = "@color/baseHeaderColor2"
		youku:backGroundDownColor = "@color/baseHeaderColor"
		youku:backGroundRoundColor = "@color/baseHeaderColor2"
		youku:backGroundRoundRx = "8dp"
		youku:backGroundRoundRy = "8dp"
		youku:buttonTextColor = "#fff" />
	<com.example.androidlongs.popwindowapplication.button.AnimationButton
		android:id = "@+id/youku_show_4"
		android:layout_width = "80dp"
		android:layout_height = "30dp"
		android:layout_gravity = "left"
		android:layout_marginLeft="12dp"
		android:layout_marginTop = "20dp"
		android:gravity = "center"
		android:padding = "0dp"
		android:text = "示例四"
		android:textSize = "8sp"
		youku:backGroundColor = "@color/baseHeaderColor2"
		youku:backGroundDownColor = "@color/baseHeaderColor"
		youku:backGroundRoundColor = "@color/baseHeaderColor2"
		youku:backGroundRoundRx = "8dp"
		youku:backGroundRoundRy = "8dp"
		youku:buttonTextColor = "#fff" />
</LinearLayout >