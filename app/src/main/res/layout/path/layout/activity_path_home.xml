<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!--title-->
    <RelativeLayout
        android:layout_width = "match_parent"
        android:layout_height = "48dp"
        android:background = "@color/baseHeaderColor"
        android:orientation = "horizontal"
    >

        <ImageView android:id = "@+id/id_youku_home_back"
                   android:layout_width = "60dp"
                   android:layout_height = "40dp"
                   android:layout_gravity = "center_vertical"
                   android:paddingBottom = "10dp"
                   android:paddingLeft = "14dp"
                   android:paddingRight = "24dp"
                   android:paddingTop = "10dp"
                   android:layout_centerVertical="true"
                   android:src = "@mipmap/back" />

        <TextView
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:layout_gravity = "center"
            android:gravity = "center"
            android:text = "爱心"
            android:textColor = "#fff"
            android:textSize = "16sp" />
    </RelativeLayout >

    <com.example.androidlongs.popwindowapplication.path.base8.PathCoreView

        android:id="@+id/pcv_main"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        custom:core_color="#ec3f3f"
        custom:core_radius="18dp"
        custom:explor_duration="2000"
        custom:typeSpeed="fast_speed"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <com.example.androidlongs.popwindowapplication.button.AnimationButton
                android:id="@+id/bt_switch_color_core_main"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="8dp"
                android:text="切换一个变态的颜色"
                android:textSize="14sp"
                custom:backGroundColor="#cc71ea"
                custom:backGroundDownColor="#c75bea"
                custom:backGroundRoundColor="#c75bea"
                custom:backGroundRoundRx="8dp"
                custom:backGroundRoundRy="8dp"
                custom:buttonTextColor="#fff"/>


            <RelativeLayout
                android:id="@+id/rl_switch_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bt_switch_color_core_main"
                android:layout_marginTop="8dp">

                <com.example.androidlongs.popwindowapplication.button.AnimationButton

                    android:id="@+id/bt_switch_speed_core_main"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="18dp"
                    android:text="切换一个异样的速度"
                    android:textSize="14sp"
                    custom:backGroundColor="#cc71ea"
                    custom:backGroundDownColor="#c75bea"
                    custom:backGroundRoundColor="#c75bea"
                    custom:backGroundRoundRx="8dp"
                    custom:backGroundRoundRy="8dp"
                    custom:buttonTextColor="#fff"/>

                <com.example.androidlongs.popwindowapplication.button.AnimationButton

                    android:id="@+id/bt_show_speed"
                    android:layout_width="64dp"
                    android:layout_height="36dp"
                    android:layout_alignBaseline="@+id/bt_switch_speed_core_main"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/bt_switch_speed_core_main"
                    android:text="默认速度"
                    android:textSize="10sp"
                    custom:backGroundColor="#4e44de"
                    custom:backGroundDownColor="#4e44de"
                    custom:backGroundRoundColor="#4e44de"
                    custom:backGroundRoundRx="10dp"
                    custom:backGroundRoundRy="10dp"
                    custom:buttonTextColor="#fff"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_switch_speed"
                android:layout_marginTop="8dp">

                <com.example.androidlongs.popwindowapplication.button.AnimationButton

                    android:id="@+id/bt_switch_explod_speed_core_main"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="18dp"
                    android:text="切换一个异样的展开"
                    android:textSize="14sp"
                    custom:backGroundColor="#cc71ea"
                    custom:backGroundDownColor="#c75bea"
                    custom:backGroundRoundColor="#c75bea"
                    custom:backGroundRoundRx="8dp"
                    custom:backGroundRoundRy="8dp"
                    custom:buttonTextColor="#fff"/>

                <com.example.androidlongs.popwindowapplication.button.AnimationButton

                    android:id="@+id/bt_explod_show_speed"
                    android:layout_width="64dp"
                    android:layout_height="36dp"
                    android:layout_alignBaseline="@+id/bt_switch_explod_speed_core_main"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/bt_switch_explod_speed_core_main"
                    android:text="默认速度"
                    android:textSize="10sp"
                    custom:backGroundColor="#4e44de"
                    custom:backGroundDownColor="#4e44de"
                    custom:backGroundRoundColor="#4e44de"
                    custom:backGroundRoundRx="10dp"
                    custom:backGroundRoundRy="10dp"
                    custom:buttonTextColor="#fff"
                    />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>