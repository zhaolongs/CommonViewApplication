<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="find"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.example.androidlongs.popwindowapplication.path.common.FindPathView
            android:id="@+id/anmation_restart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e3e3e3"

            custom:findCicrleWidth="14dp"
            custom:findCicrleRadius="40dp"
            custom:findCicrleDuation="4000"
            custom:isShowCenterOrigin="true"
            custom:findBackgroundColor="#f7f3e5"
            custom:findColor="#5a07bf"
            custom:typeModel="leve3_anmation_y_restart"
            />

    </LinearLayout>

</LinearLayout>