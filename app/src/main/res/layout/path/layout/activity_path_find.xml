<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="find"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.example.androidlongs.popwindowapplication.path.common.FindPathView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#e3e3e3"
            custom:typeModel="defaul"/>

        <com.example.androidlongs.popwindowapplication.path.common.FindPathView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="18dp"
            android:background="#e3e3e3"
            custom:findCenterOriginColor="#d23030"
            custom:isShowCenterOrigin="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.example.androidlongs.popwindowapplication.path.common.FindPathView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#e3e3e3"
            custom:typeModel="leve1"/>

        <com.example.androidlongs.popwindowapplication.path.common.FindPathView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="18dp"
            android:background="#e3e3e3"
            custom:isShowcoord="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.example.androidlongs.popwindowapplication.path.common.FindPathView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#e3e3e3"
            custom:typeModel="leve2"/>

        <com.example.androidlongs.popwindowapplication.path.common.FindPathView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="18dp"
            android:background="#e3e3e3"
            custom:findBackgroundColor="#f9f5e8"
            custom:findColor="#f5e45e"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.example.androidlongs.popwindowapplication.path.common.FindPathView
            android:id="@+id/anmation_restart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#e3e3e3"
            custom:findBackgroundColor="#f7f3e5"
            custom:findColor="#5a07bf"
            custom:typeModel="leve3_anmation_y_restart"
            />

        <com.example.androidlongs.popwindowapplication.path.common.FindPathView

            android:id="@+id/anmation_reserve"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="18dp"
            android:background="#e3e3e3"
            custom:findCicrleDuation="800"
            custom:findBackgroundColor="#f7f3e5"
            custom:findColor="#5a07bf"
            custom:typeModel="leve3_anmation_y_reserve"/>
    </LinearLayout>

</LinearLayout>